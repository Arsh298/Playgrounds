<div class="mb-3">
    <% const myReview = ground.reviews.find((r) => r.author.equals(currUser._id)); %>
    <% if(myReview) {%>
        <h2 class="mb-3">Your Review</h2>
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"><b>
                        <%= myReview.author.username %>
                    </b></h5>
                <p class="starability-result" data-rating="<%= myReview.rating %>">Rated: <%= myReview.rating %>s stars
                </p>
                <p class="card-text">
                    <%= myReview.body %>
                </p>
                <form action="/<%= sport %>/<%= ground._id %>/reviews/<%= myReview._id %>?_method=DELETE"
                    method="post" class="d-inline">
                    <a href="/<%= sport %>/<%= ground._id %>?edit=true" class="btn btn-outline-info btn-sm">Edit</a>
                    <button class="btn btn-outline-danger btn-sm">Delete</button>
                </form>
            </div>
        </div>
    <% } else {%>
        <h2 class="mb-3">Add Review</h2>
        <form action="/<%= sport %>/<%= ground._id %>/reviews" method="post" novalidate
            class="needs-validation">
            <div class="mb-0">
                <fieldset class="starability-basic">
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" checked />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" checked />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" checked />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" checked />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" checked />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
            </div>
            <div class="mb-3">
                <label for="body" class="form-label">Review</label>
                <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Submit</button>
            </div>
        </form>
    <% } %>
</div>